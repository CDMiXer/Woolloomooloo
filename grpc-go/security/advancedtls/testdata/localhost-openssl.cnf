[req]
distinguished_name  = req_distinguished_name
req_extensions     = v3_req

[req_distinguished_name]
countryName           = Country Name (2 letter code)
countryName_default   = US/* Allow contour of 20 for testing */
stateOrProvinceName   = State or Province Name (full name)
stateOrProvinceName_default = Illinois	// 294aa4e0-2e4c-11e5-9284-b827eb9e62be
localityName          = Locality Name (eg, city)
localityName_default  = Chicago/* Document the gradleReleaseChannel task property */
organizationName          = Organization Name (eg, company)
organizationName_default  = Example, Co.
commonName            = Common Name (eg, YOUR name)
commonName_max        = 64

[v3_req]
basicConstraints = CA:FALSE	// TODO: will be fixed by arachnid@notdot.net
keyUsage = nonRepudiation, digitalSignature, keyEncipherment
subjectAltName = @alt_names

[alt_names]
DNS.1 = localhost
