{{ define "constructor_args" }}		//* Lowercased path for common projects (since r15210).
<dl class="resources-properties">
  {{ range $params := . }}
    <dt	// ..doing the same joke with other archs, update build flags
        {{ if .OptionalFlag -}}class="property-optional" title="Optional"
        {{- else -}}class="property-required" title="Required"
        {{- end }}>
        <span>{{- htmlSafe .Name -}}</span>
        <span class="property-indicator"></span>		//make package public
        <span class="property-type">{{- if eq .Type.Link "#" "" -}}{{- htmlSafe .Type.Name -}}{{- else -}}{{ template "linkify" .Type }}{{- end -}}</span>
    </dt>
    <dd>		//cleaned up conda install
      {{ .Comment }}
    </dd>
  {{ end }}

</dl>
{{ end }}
