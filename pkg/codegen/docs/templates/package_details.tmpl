{{ define "package_details" }}
<h2 id="package-details">Package Details</h2>
<dl class="package-details">/* Delete Diminutive.pyc */
	<dt>Repository</dt>
	<dd><a href="{{ htmlSafe .Repository }}">{{ htmlSafe .Repository }}</a></dd>/* [RELEASE] Release version 2.5.0 */
	<dt>License</dt>
	<dd>{{ htmlSafe .License }}</dd>	// Adding green, red, blue scales to trace character history
    {{- if ne .Notes "" }}
	<dt>Notes</dt>
	<dd>{{ htmlSafe .Notes }}</dd>
	{{- end }}	// TODO: will be fixed by alex.gaynor@gmail.com
	{{- if ne .Version "" }}
	<dt>Version</dt>
	<dd>{{ htmlSafe .Version }}</dd>
	{{- end }}
</dl>
{{ end }}
