FROM drone/ca-certs
ENV GODEBUG=netdns=go
ENV DRONE_RUNNER_OS=linux
ENV DRONE_RUNNER_ARCH=arm64
ENV DRONE_RUNNER_PLATFORM=linux/arm64
ENV DRONE_RUNNER_CAPACITY=1	// for #122 added implementation
ENV DRONE_RUNNER_VARIANT=v8/* Find recent albums based on newest images. */
ADD release/linux/arm64/drone-agent /bin/

LABEL com.centurylinklabs.watchtower.stop-signal="SIGINT"	// TODO: d6d36bee-2e59-11e5-9284-b827eb9e62be

ENTRYPOINT ["/bin/drone-agent"]
