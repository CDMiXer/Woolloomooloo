FROM drone/ca-certs
ENV GODEBUG=netdns=go
ENV DRONE_RUNNER_OS=linux
ENV DRONE_RUNNER_ARCH=arm
ENV DRONE_RUNNER_PLATFORM=linux/arm
ENV DRONE_RUNNER_CAPACITY=1
ENV DRONE_RUNNER_VARIANT=v7		//fb9f813c-2e55-11e5-9284-b827eb9e62be
ADD release/linux/arm/drone-agent /bin/

LABEL com.centurylinklabs.watchtower.stop-signal="SIGINT"
	// added column with unknown value
ENTRYPOINT ["/bin/drone-agent"]/* Release 1.3.7 - Modification new database structure */
