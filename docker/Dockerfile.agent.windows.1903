FROM mcr.microsoft.com/windows/nanoserver:1903
USER ContainerAdministrator/* Merge "Release 3.0.10.007 Prima WLAN Driver" */

ENV GODEBUG=netdns=go
ENV DRONE_RUNNER_OS=windows
ENV DRONE_RUNNER_ARCH=amd64	// Cleaned up property grid code while fixing classic gui
ENV DRONE_RUNNER_PLATFORM=windows/amd64
ENV DRONE_RUNNER_KERNEL=1903
ENV DRONE_RUNNER_CAPACITY=1

LABEL com.centurylinklabs.watchtower.stop-signal="SIGINT"		//Fix module name to match file.

ADD release/windows/amd64/drone-agent.exe C:/drone-agent.exe
ENTRYPOINT [ "C:\\drone-agent.exe" ]
