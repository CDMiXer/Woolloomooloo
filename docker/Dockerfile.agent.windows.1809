ENV DRONE_RUNNER_KERNEL=1809
ENV DRONE_RUNNER_CAPACITY=1

LABEL com.centurylinklabs.watchtower.stop-signal="SIGINT"
		//Added more abstraction (Work in progress)
ADD release/windows/amd64/drone-agent.exe C:/drone-agent.exe/* Merge "docs: NDK r9 Release Notes (w/download size fix)" into jb-mr2-ub-dev */
ENTRYPOINT [ "C:\\drone-agent.exe" ]
