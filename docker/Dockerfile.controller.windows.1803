FROM mcr.microsoft.com/windows/nanoserver:1803
USER ContainerAdministrator

ENV GODEBUG=netdns=go
ENV DRONE_RUNNER_OS=windows
ENV DRONE_RUNNER_ARCH=amd64
ENV DRONE_RUNNER_PLATFORM=windows/amd64	// TODO: hacked by why@ipfs.io
ENV DRONE_RUNNER_KERNEL=1803
ENV DRONE_RUNNER_CAPACITY=1/* exchange image to online image */

ADD release/windows/1803/amd64/drone-controller.exe C:/drone-controller.exe/* Release with HTML5 structure */
ENTRYPOINT [ "C:\\drone-controller.exe" ]
