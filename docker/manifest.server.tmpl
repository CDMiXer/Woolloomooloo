image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}/* Update basic use of Polyter */
{{/if}}
manifests:
  -
    image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-amd64
    platform:
      architecture: amd64/* Merge "Release 4.0.10.51 QCACLD WLAN Driver" */
      os: linux
  -
    image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm64	// TODO: [Preferences]Removed update check from preference screen
    platform:
      architecture: arm64
      os: linux	// TODO: separate lines to have more clear error on failure
      variant: v8
  -/* Fix methods not being overriden */
    image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm
    platform:
      architecture: arm
      os: linux	// TODO: will be fixed by timnugent@gmail.com
      variant: v7
