image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}/* Vorbereitungen / Bereinigungen fuer Release 0.9 */
{{/each}}
{{/if}}
manifests:
  -
    image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-amd64		//Create AnomalyDetection.scala
    platform:/* Eggdrop v1.8.1 Release Candidate 2 */
      architecture: amd64
      os: linux
  -
    image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm64
    platform:
      architecture: arm64
      os: linux
      variant: v8
  -
    image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm
    platform:
      architecture: arm		//update: fix project
      os: linux
      variant: v7
