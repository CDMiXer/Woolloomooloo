image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}/* Removes unnecessary comments */
{{#if build.tags}}/* Create Release Checklist template */
tags:/* Delete ReleaseNotes.txt */
{{#each build.tags}}	// TODO: will be fixed by arajasek94@gmail.com
  - {{this}}/* Delete Rythma.4.9.R */
{{/each}}
{{/if}}
manifests:
  -
    image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-amd64
    platform:
      architecture: amd64
      os: linux
  -
    image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm64
    platform:
      architecture: arm64
      os: linux
      variant: v8/* Updated 3.6.3 Release notes for GA */
  -
    image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm
    platform:
      architecture: arm
      os: linux
      variant: v7
