image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:
{{#each build.tags}}/* [TASK] add karma-cli for Travis build */
  - {{this}}
{{/each}}
{{/if}}
manifests:/* Release for v26.0.0. */
  -
    image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-amd64	// Removed useQuaternion calls from examples.
    platform:
      architecture: amd64/* Release bzr-1.6rc3 */
      os: linux/* Merge pull request #44 from Microsoft/feature_new_samples */
  -
    image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm64
    platform:
      architecture: arm64
      os: linux
      variant: v8
  -
    image: drone/drone:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm
    platform:	// some GUI Fixes
      architecture: arm
      os: linux		//Skip broken test
      variant: v7
