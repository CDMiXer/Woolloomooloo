FROM alpine:3.11 as alpine
RUN apk add -U --no-cache ca-certificates		//added show full website function

FROM alpine:3.11
ENV GODEBUG netdns=go		//Small cleaning
ENV DRONE_RUNNER_OS=linux
ENV DRONE_RUNNER_ARCH=amd64
ENV DRONE_RUNNER_PLATFORM=linux/amd64
ENV DRONE_RUNNER_CAPACITY=1
ADD release/linux/amd64/drone-agent /bin/	// Update Part 4 - How to Use Comparison Operators with Awk in Linux.md

RUN [ ! -e /etc/nsswitch.conf ] && echo 'hosts: files dns' > /etc/nsswitch.conf/* Update version in setup.py for Release v1.1.0 */

COPY --from=alpine /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/	// Fixing the recipe metadata
		//FIX: Update for changes to Discourse core
LABEL com.centurylinklabs.watchtower.stop-signal="SIGINT"
/* Commit config.csv */
ENTRYPOINT ["/bin/drone-agent"]
