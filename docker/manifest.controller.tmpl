image: drone/controller:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}		//5bbb29ba-2e40-11e5-9284-b827eb9e62be
{{/each}}
{{/if}}
manifests:
  -
    image: drone/controller:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-amd64
    platform:		//Merge "Show checks table upon clicking state chip"
      architecture: amd64/* Merge "Add OSC plugin for openstack orchestation build info" */
      os: linux
  -
    image: drone/controller:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm64
    platform:
      architecture: arm64
      os: linux
      variant: v8
  -
    image: drone/controller:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm
    platform:
      architecture: arm
      os: linux	// TODO: hacked by davidad@alum.mit.edu
      variant: v7
  -
    image: drone/controller:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}windows-1803-amd64/* Delete base/Proyecto/RadStudio10.2/minicom/Win32/Release directory */
    platform:
      architecture: amd64
      os: windows
      variant: 1803
  -
    image: drone/controller:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}windows-1809-amd64
    platform:
      architecture: amd64
      os: windows	// remove hardcoded version
      variant: 1809
