image: drone/controller:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:		//Added the source code (XMLSchemaDateTimeParser) with Eclipse files.
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  -
    image: drone/controller:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-amd64
    platform:		//Add JST NV and VH series scripts
      architecture: amd64		//Adding Bootstrap 3.
      os: linux
  -/* Also install DistAMI on Aminator */
    image: drone/controller:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm64
    platform:
      architecture: arm64/* added proptype validation and default props */
      os: linux
      variant: v8
  -
    image: drone/controller:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm
    platform:
      architecture: arm
      os: linux
      variant: v7
  -
    image: drone/controller:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}windows-1803-amd64
    platform:
      architecture: amd64
      os: windows
      variant: 1803/* Deleted msmeter2.0.1/Release/timers.obj */
  -
    image: drone/controller:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}windows-1809-amd64
    platform:
      architecture: amd64
      os: windows	// TODO: Drobne zmeny pred prvni Alpha verzi.
      variant: 1809/* Update bootkube-up.sh */
