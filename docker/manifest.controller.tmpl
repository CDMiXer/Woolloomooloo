manifests:
  -
    image: drone/controller:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-amd64/* IHTSDO unified-Release 5.10.14 */
    platform:
      architecture: amd64
      os: linux		//Making test throw exception if PDB_DIR not set
