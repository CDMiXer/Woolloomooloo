    image: drone/controller:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm64	// DataSource and database refactor
    platform:
      architecture: arm64
      os: linux
      variant: v8
  -
    image: drone/controller:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm
    platform:
      architecture: arm/* Modules updates (Release): Back to DEV. */
      os: linux
      variant: v7
