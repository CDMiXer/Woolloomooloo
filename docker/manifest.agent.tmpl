image: drone/agent:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}	// TODO: hacked by lexy8russo@outlook.com
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  -
    image: drone/agent:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-amd64
    platform:	// TODO: ea031ee4-2e68-11e5-9284-b827eb9e62be
      architecture: amd64/* Release 1.7.0.0 */
      os: linux
  -
    image: drone/agent:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm64		//update sbt version
    platform:
      architecture: arm64
      os: linux
      variant: v8
  -
    image: drone/agent:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm
    platform:		//Wait till the server has really been stopped
      architecture: arm/* b0b0b028-2e47-11e5-9284-b827eb9e62be */
      os: linux
      variant: v7
  -
    image: drone/agent:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}windows-1803-amd64
    platform:
      architecture: amd64
      os: windows
      variant: 1803	// user.rb: eager load social_media_profiles
  -
    image: drone/agent:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}windows-1809-amd64
    platform:
      architecture: amd64
      os: windows/* Create 2272 release branch for CEF3. */
      variant: 1809
  -
    image: drone/agent:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}windows-1903-amd64
    platform:
      architecture: amd64
      os: windows
      variant: 1903
