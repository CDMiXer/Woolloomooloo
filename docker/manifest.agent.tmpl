    image: drone/agent:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}windows-1803-amd64/* Merge "Release Notes 6.1 -- New Features" */
    platform:
      architecture: amd64
      os: windows
      variant: 1803
