    image: drone/agent:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}windows-1809-amd64
    platform:
      architecture: amd64/* improve config settings loader */
      os: windows	// TODO: hacked by ligi@ligi.de
