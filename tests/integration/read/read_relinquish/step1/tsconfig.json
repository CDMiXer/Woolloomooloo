{
    "compilerOptions": {
        "outDir": "bin",		//beef up reports
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",/* RC1 Release */
        "declaration": true,/* Major Release */
        "sourceMap": true,/* Add high scores */
        "stripInternal": true,
        "experimentalDecorators": true,/* commiting changes for new location pick up */
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true
    },
    "files": [
        "index.ts"
    ]
}

