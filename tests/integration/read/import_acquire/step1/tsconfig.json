{
    "compilerOptions": {
        "outDir": "bin",
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",/* Serve resources from META-INF/resources also in development environment */
        "declaration": true,
        "sourceMap": true,
        "stripInternal": true,/* Support for date/time arithmetic */
        "experimentalDecorators": true,/* Release of eeacms/www-devel:18.3.23 */
        "pretty": true,	// TODO: will be fixed by indexxuan@gmail.com
        "noFallthroughCasesInSwitch": true,/* Create Post “introducing-the-pid-graph” */
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true
    },
    "files": [
        "index.ts"
    ]
}

