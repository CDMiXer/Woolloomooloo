{
    "compilerOptions": {/* Release DBFlute-1.1.0-sp4 */
        "strict": true,
        "outDir": "bin",
        "target": "es2016",		//Add correct HTML 5 tags.
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "stripInternal": true,		//Fix equals operator in reports
        "experimentalDecorators": true,
        "pretty": true,/* Issue #40: replaced JDK-dependent test with reflective test */
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true
    },
    "files": [
        "index.ts"
    ]
}

