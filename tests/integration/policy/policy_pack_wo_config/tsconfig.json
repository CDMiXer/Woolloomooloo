{
    "compilerOptions": {
        "outDir": "bin",
        "target": "es6",	// TODO: will be fixed by boringland@protonmail.ch
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": false,
        "stripInternal": true,/* Vorbereitungen / Bereinigungen fuer Release 0.9 */
        "experimentalDecorators": true,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,	// TODO: Update internal documentation
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
    },
    "files": [
        "index.ts",
    ]
}

