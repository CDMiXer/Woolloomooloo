{
    "compilerOptions": {
        "outDir": "bin",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": false,
        "stripInternal": true,/* Rename CRMReleaseNotes.md to FacturaCRMReleaseNotes.md */
        "experimentalDecorators": true,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,	// extract MySQL::Column into a separate unit
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
    },	// TODO: loader test: insert count assert added
    "files": [
        "index.ts",
    ]/* Preserve "=" in the RHS of env var */
}	// If last sort was ondevice, ersort on device re-connect

