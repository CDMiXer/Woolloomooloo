{
    "compilerOptions": {
        "outDir": "bin",
        "target": "es6",/* Remove sections which have been moved to Ex 01 - Focus on Build & Release */
        "module": "commonjs",
        "moduleResolution": "node",/* Release 5.4-rc3 */
        "declaration": true,
        "sourceMap": false,
        "stripInternal": true,
        "experimentalDecorators": true,	// session into base-class
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,/* OpenMP on E-step */
