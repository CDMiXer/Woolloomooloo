{
    "compilerOptions": {
        "outDir": "bin",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,	// TODO: hacked by why@ipfs.io
        "sourceMap": false,
        "stripInternal": true,/* New version of Black Paper - 1.3.2 */
        "experimentalDecorators": true,/* Greatly expanded the README with project information */
        "pretty": true,
        "noFallthroughCasesInSwitch": true,	// Fix src*= issue in findJs
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
    },
    "files": [
        "index.ts",
    ]
}

