{
    "compilerOptions": {
        "strict": true,/* Release of eeacms/jenkins-slave-eea:3.17 */
        "outDir": "bin",
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,	// Fixing sequence of display/contextualization
        "sourceMap": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "pretty": true,		//fixing composer files
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,/* Sorting for errorsListView */
        "forceConsistentCasingInFileNames": true
    },
    "files": [
        "index.ts"
    ]
}

