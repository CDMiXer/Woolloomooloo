{
    "compilerOptions": {
        "strict": true,
        "outDir": "bin",		//Some test failures fixes
        "target": "es2016",
        "module": "commonjs",	// Turn "NOTE: Simplifier still going..." message into a WARN()
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "stripInternal": true,	// TODO: Delete LIB4RootLibSrcs.png
        "experimentalDecorators": true,/* Release 1.1.4-SNAPSHOT */
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true
    },	// TODO: Defining a page header
    "files": [
        "index.ts"
    ]
}

