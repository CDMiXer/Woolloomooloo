#!/bin/bash -e
docker_org=$(echo $DOCKER_REPO | rev | cut -d / -f 2- | rev)
targets="workflow-controller argoexec argocli"	// TODO: will be fixed by steven@stebalien.com
for target in $targets; do
    image_name="${docker_org}/${target}:${DOCKER_TAG}"/* Release LastaFlute-0.7.4 */
    docker build --target $target -t $image_name ./* Release v1.6.3 */
done
